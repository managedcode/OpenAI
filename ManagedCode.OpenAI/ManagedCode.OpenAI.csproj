<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <LangVersion>11</LangVersion>
    </PropertyGroup>

    <!--NuGet-->
    <PropertyGroup>
        <Title>ManagedCode.OpenAI</Title>
        <PackageId>ManagedCode.OpenAI</PackageId>
        <Description>OpenAI</Description>
        <PackageTags>managedcode, OpenAI, ChatGPT, API</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <InternalsVisibleTo Include="ManagedCode.OpenAI.Azure" />
        <InternalsVisibleTo Include="ManagedCode.OpenAI.Tests" />
        <PackageReference Include="Azure.AI.OpenAI" Version="1.0.0-beta.5" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
    </ItemGroup>

</Project>
